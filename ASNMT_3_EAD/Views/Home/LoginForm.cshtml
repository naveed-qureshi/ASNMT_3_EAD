@using ASNMT_3_EAD.Models
@model User 

<html>
<head>
    <title>Logins</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div id="login" class="col-md-6 float-left">

                <h1 style="text-align:center;color: white;">Sign In</h1>
                <hr style="width: 90%; margin: 2% auto; background-color: white; height: 5px;">
                <form class="text-white" method="post" asp-action="Login">
                    <div class="form-group">
                        <label for="Email">Email*</label>
                        <input type="email" class="form-control" name="email" id="Email" aria-describedby="emailHelp"
                               placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" name="password" id="Password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary" style="width:100%">Sign In</button>
                </form>
            </div>
            <div id="signUp" class="col-md-6">
                <h1 style="text-align:center;color: white;">Sign Up</h1>
                <hr style="width: 90%; margin: 2% auto; background-color: white; height: 5px;">

                <form class="text-white" method="post" action="/Home/SignUp" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="UserName">User Name</label>
                        <input class="form-control" asp-for="UserName">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email*</label>
                        <input class="form-control" type="email" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label asp-for="password">Password</label>
                        <input class="form-control" type="password" asp-for="password">
                    </div>


                    <div class="form-group">
                        <label asp-for="Image">Select Your Profile Picture*</label>
                        <input class="form-control-file" asp-for="Image">
                    </div>

                    <button type="submit" class="btn btn-primary" style="width:100%">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>