@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ASNMT_3_EAD.Models.UserData
<div style="width:50%;margin:2% auto">
   <div class="row mb-5">
       <div class="col-sm-2 mr-5">
           <img src="@Model.ImageAddress" width="100px" height="100px" style="border-radius:50%" />
       </div>
       <div>
           <h3>@Model.UserName</h3>
       </div>
   </div>
   <div>
       <h6>Profile</h6>
   </div>
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">Username*</label>
            <input class="form-control" type="text" placeholder="username..." value="@Model.UserName">
            <small id="emailHelp" class="form-text text-muted">Require 150 characters of fewer. Letters,digits and @@,/,+,-,. only </small>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email*</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="@Model.Email">
        </div>
        <label for="exampleInputEmail1">Image*</label><br />
        <label for="exampleInputEmail1">Currently: <span style="color:blue">@Model.ImageAddress</span></label>
        <div class="form-group">
            <label for="exampleFormControlFile1">Change:</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Old Password*</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">New Password*</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-outline-info">Update</button>
    </form>
</div>